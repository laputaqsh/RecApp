<view>
  <view class="login-icon">
    <image class="login-img" src="/images/back.jpg"></image>
  </view>
  <view class="login-from">
    <form bindsubmit='doLogin'>
      <!--账号-->
      <view class="inputView">
        <image class="nameImage" src="/images/icon/username.png"></image>
        <label class="loginLabel">账号</label>
        <input name="username" type='number' value='1001583' class="inputText" placeholder="请输入账号" />
      </view>
      <view class="line"></view>

      <!--密码-->
      <view class="inputView">
        <image class="keyImage" src="/images/icon/password.png"></image>
        <label class="loginLabel">密码</label>
        <input name="password" value='231932' class="inputText" password="true" placeholder="请输入密码" />
      </view>

      <!--按钮-->
      <view>
        <button class="loginBtn" type="primary" form-type='submit'>登录</button>
        <button class="registBtn" type="warn" bindtap="goRegistPage">注册</button>
      </view>

    </form>
  </view>
</view>