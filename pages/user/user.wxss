.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.bgBox {
  width: 100%;
  height: 432rpx;
  position: relative;
}

.bg {
  width: 100%;
  height: 432rpx;
  object-fit: cover;
}

.img {
  width: 115rpx;
  height: 115rpx;
  border-radius: 50%;
  position: absolute;
  left: 315rpx;
  top: 135rpx;
}

/*表单内容*/

.login-form {
  flex: auto;
  justify-content: center;
  height: 100%;
}

/* 第二个模块 */

.unLogin view {
  color: #000;
  opacity: 0.5;
  font-size: 28rpx;
  text-align: center;
}

.unLogin view:nth-of-type(1) {
  margin-top: 172rpx;
}

.unLogin button {
  display: block;
  margin: 57rpx auto;
  width: 537rpx;
  height: 77rpx;
  background-color: #845c4a;
  color: white;
  font-size: 31rpx;
  font-weight: 500;
  border-radius: 3px;
  line-height: 77rpx;
  text-align: center;
}

/*列表内容*/

.infomation {
  background: white;
}

.title {
  width: 100%;
  flex-flow: row;
  padding: 30rpx;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  overflow: hidden;
  border-bottom: 1px solid #f0f0f0;
}

.title image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 21rpx;
  border-radius: 50%;
}

.title content {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  font-family: PingFangSC;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-direction: column;
}

/* 粉丝、关注、积分 */
.number {
  width: 100%;
  padding: 30rpx 0;
  box-sizing: border-box;
  overflow: hidden;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  display: flex;
}

.number .nitem {
  float: left;
  flex-grow: 1;
  flex-direction: column;
  text-align: center;
  overflow: hidden;
}

.line {
  width: 100%;
  height: 1px;
}

.tinyline {
  width: 100%;
  height: 15px;
}

.bigline {
  width: 100%;
  height: 30px;
}

/* 我的列表 */
.list {
  background-color: white;
  line-height: 45px;
  padding-left: 20px;
}

.list litem {
  margin: 15px 15px 15px 10px;
  color: black;
  font-size: 15px;
}